@using KahaTiev.DTOs
@model LoginDTO;

@{
    ViewData["Title"] = "Login";
}

@{
    var error = TempData["ErrorMessage"];
    if (error != null)
    {
        <script>
            Swal.fire({
                text: '@error',
                icon: 'error',
                confirmButtonText: 'Cool'
            })
        </script>
    }
}



<div>
    <form asp-action="UserLogin" asp-controller="Account">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Username"  placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <p>new user? <a asp-action="Register" asp-controller="Account">register</a> with us</p>
</div>