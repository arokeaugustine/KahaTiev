@using KahaTiev.Data.DTOs
@model ChangePasswordDTO;
@{
    ViewData["Title"] = "Change Password";
}

<h1>
    Update Password
</h1>
<div>
    <form asp-action="ChangePassword" asp-controller="Account">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="exampleInputEmail1">Old Password</label>
            <input type="password" class="form-control" id="exampleInputEmail1" asp-for="OldPassword" placeholder="Enter Old Password">
        </div>
        <div class="form-group mt-2">
            <label for="">New Password</label>
            <input type="password" class="form-control" asp-for="NewPassword" placeholder="New Password">
        </div>

        <div class="form-group" mt-2>
            <label for="">Confirm New Password</label>
            <input type="password" class="form-control" asp-for="ConfirmNewPassword" placeholder="Confirm New Passord">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>

</div>