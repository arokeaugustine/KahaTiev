@using KahaTiev.DTOs.Payment
@model PaymentViewModel;

<div>
    <form asp-action="Index" asp-controller="Payment" >
        <div class="amount">
            <label for="name">Amount</label>
            <input type="text" class="form-control" id="amount" asp-for="@Model.PackageAmount" value="@Model.PackageAmount" readonly>

        </div>

             
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="" asp-for="@Model.PayerName" >

        </div>
   
        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" asp-for="@Model.PayerEmail" placeholder="Enter Last Name">

        </div>
   

       
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>