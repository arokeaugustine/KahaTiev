@using KahaTiev.DTOs
@model List<ProductDTO>

@{
    ViewData["Title"] = "Products";
}

<h5 class="mt-1 h-75">
    Products page

</h5>

@if (Model != null)
{
    <div class="d-flex flex-wrap">
        @foreach (var item in Model)
        {
            <div class="d-flex flex-column mb-3 me-3" style="width: 18rem;">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                       
                        <a asp-action="Packages" asp-route-id="@item.Guid" class="btn btn-primary">See More</a>
                    </div>
                </div>
            </div>
        }
    </div>


}